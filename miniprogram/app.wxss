/**app.wxss**/
page {
  --felt-900: #0f1814;
  --felt-800: #12231b;
  --felt-700: #163428;
  --felt-500: #1f5b45;
  --felt-300: #3ea37a;
  --ink-100: #f7f7f2;
  --ink-200: #d9ddd2;
  --ink-400: #a2ab98;
  --accent-1: #b38b3f;
  --accent-2: #e3c574;
  --danger: #c24b4b;
  --chip-blue: #3a8fdc;
  --chip-red: #d45b5b;
  --chip-green: #4dbb8a;
  --chip-black: #2b2b2b;
  background: radial-gradient(120% 120% at 50% 0%, #1b3a2c 0%, #0f1814 55%, #0b120f 100%);
  color: var(--ink-100);
  font-family: "STKaiti", "Kaiti SC", "STSong", serif;
  min-height: 100%;
}

view,
text {
  box-sizing: border-box;
}

.screen {
  min-height: 100%;
  padding: 36rpx 28rpx 60rpx;
  position: relative;
  overflow: hidden;
}

.screen::before {
  content: "";
  position: absolute;
  top: -30%;
  right: -20%;
  width: 80%;
  height: 80%;
  background: radial-gradient(circle at 30% 30%, rgba(62, 163, 122, 0.35), transparent 65%);
  opacity: 0.7;
  pointer-events: none;
}

.screen::after {
  content: "";
  position: absolute;
  bottom: -25%;
  left: -15%;
  width: 70%;
  height: 70%;
  background: radial-gradient(circle at 40% 40%, rgba(179, 139, 63, 0.25), transparent 70%);
  opacity: 0.8;
  pointer-events: none;
}

.stack {
  position: relative;
  z-index: 1;
}

.title {
  font-size: 44rpx;
  letter-spacing: 2rpx;
  font-weight: 600;
}

.subtitle {
  margin-top: 8rpx;
  color: var(--ink-400);
  font-size: 24rpx;
  letter-spacing: 1rpx;
}

.panel {
  background: rgba(10, 16, 13, 0.6);
  border: 1px solid rgba(227, 197, 116, 0.2);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.35);
  backdrop-filter: blur(12px);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chip {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, #ffffff, #c7d6e6 35%, #3a8fdc 70%);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.3);
}

.btn {
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #2f9e70, #1f5b45);
  border: 1px solid rgba(227, 197, 116, 0.3);
  color: var(--ink-100);
  box-shadow: 0 10rpx 24rpx rgba(31, 91, 69, 0.35);
}

.btn-ghost {
  border: 1px solid rgba(227, 197, 116, 0.25);
  color: var(--ink-200);
  background: rgba(12, 18, 15, 0.5);
}

.tag {
  border-radius: 999rpx;
  padding: 6rpx 16rpx;
  font-size: 20rpx;
  color: var(--ink-200);
  background: rgba(227, 197, 116, 0.14);
  border: 1px solid rgba(227, 197, 116, 0.25);
}

.fade-in {
  animation: fadeInUp 0.6s ease both;
}

.delay-1 {
  animation-delay: 0.08s;
}

.delay-2 {
  animation-delay: 0.16s;
}

.delay-3 {
  animation-delay: 0.24s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
