.header {
  margin-bottom: 24rpx;
}

.title-sm {
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.summary-meta {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  color: var(--ink-400);
  font-size: 22rpx;
}

.result {
  margin-bottom: 24rpx;
}

.result-row {
  padding: 16rpx 12rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  display: grid;
  grid-template-columns: 0.5fr 1.2fr 0.6fr 0.7fr;
  gap: 10rpx;
  align-items: center;
  font-size: 24rpx;
}

.result-rank {
  color: var(--ink-400);
  font-weight: 600;
}

.result-name {
  color: var(--ink-100);
}

.result-delta {
  text-align: right;
  font-weight: 600;
}

.result-stack {
  text-align: right;
  color: var(--ink-400);
  font-size: 22rpx;
}

.delta-up .result-delta {
  color: var(--chip-green);
}

.delta-down .result-delta {
  color: var(--chip-red);
}

.delta-flat .result-delta {
  color: var(--ink-400);
}

.action-row {
  gap: 12rpx;
}

.action-row .btn {
  flex: 1;
}
