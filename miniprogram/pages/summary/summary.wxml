<view class="screen">
  <view class="stack">
    <view class="panel header fade-in">
      <view class="title-sm">房间号</view>
      <view class="subtitle">#{{table.code}} · {{roundLabel}}</view>
      <view class="summary-meta">
        <text>底池积分 {{table.pot}}</text>
        <text>玩家 {{table.players.length}}</text>
      </view>
    </view>

    <view class="panel result fade-in delay-1">
      <view class="row table-head">
        <view class="section-title">积分差额</view>
        <view class="tag">结果</view>
      </view>
      <view wx:for="{{summaryList}}" wx:key="id" class="result-row {{item.deltaClass}}">
        <view class="result-name">{{item.name}}</view>
        <view class="result-delta">{{item.deltaLabel}}</view>
        <view class="result-stack">积分 {{item.stack}}</view>
      </view>
    </view>

    <view class="panel actions fade-in delay-2">
      <view class="row action-row">
        <button class="btn btn-ghost" bindtap="backToTable">回到房间</button>
        <button class="btn btn-primary" bindtap="finishTable">结束房间</button>
      </view>
    </view>
  </view>
</view>
