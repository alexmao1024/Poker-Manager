.header {
  margin-bottom: 24rpx;
}

.title-sm {
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.pot {
  text-align: right;
}

.pot-hero {
  padding: 8rpx 14rpx;
  border-radius: 16rpx;
  background: rgba(227, 197, 116, 0.12);
  border: 1px solid rgba(227, 197, 116, 0.35);
}

.pot-label {
  color: var(--ink-400);
  font-size: 20rpx;
  letter-spacing: 1rpx;
}

.pot-value {
  font-size: 44rpx;
  color: var(--accent-2);
  font-weight: 600;
}

.meta {
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
  color: var(--ink-400);
  font-size: 22rpx;
}

.blind-row {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  color: var(--ink-200);
  font-size: 22rpx;
  flex-wrap: wrap;
  gap: 8rpx 12rpx;
}

.players {
  margin-bottom: 24rpx;
}

.table-head {
  margin-bottom: 12rpx;
}

.player-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 14rpx;
  margin-top: 16rpx;
}

.player-card {
  padding: 18rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.06);
  background: rgba(10, 16, 13, 0.7);
  transition: transform 0.2s ease;
}

.player-card.is-turn {
  border: 1px solid rgba(227, 197, 116, 0.6);
  box-shadow: 0 8rpx 20rpx rgba(179, 139, 63, 0.35);
  transform: translateY(-4rpx);
}

.player-card.status-fold {
  opacity: 0.5;
}

.player-card.status-out {
  opacity: 0.35;
}

.player-name {
  font-size: 26rpx;
}

.tag-group {
  display: flex;
  gap: 8rpx;
}

.tag-soft {
  background: rgba(62, 163, 122, 0.18);
  border-color: rgba(62, 163, 122, 0.4);
}

.player-meta {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: var(--ink-400);
  display: flex;
  justify-content: space-between;
}

.actions {
  margin-bottom: 24rpx;
  overflow: hidden;
}

.action-info {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  color: var(--ink-400);
  font-size: 22rpx;
}

.action-buttons {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
}

.action-buttons .btn,
.action-tools .btn,
.raise .btn {
  min-width: 0;
  width: 100%;
}

.action-tools {
  margin-top: 12rpx;
}

.action-tools .btn {
  width: 100%;
}

.raise {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.quick-raise {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10rpx;
}

.quick-btn {
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(227, 197, 116, 0.25);
  color: var(--ink-200);
  background: rgba(12, 18, 15, 0.5);
  font-size: 22rpx;
  min-width: 0;
  text-align: center;
}

.control-buttons {
  gap: 12rpx;
}

.control-buttons .btn {
  flex: 1;
}

.control-buttons .btn[disabled] {
  opacity: 0.5;
}
