@import "../table/table.wxss";

.lobby-hint {
  margin-top: 12rpx;
  color: var(--ink-400);
  font-size: 22rpx;
  text-align: center;
}

.lobby-control {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.lobby-control .btn {
  width: 100%;
}


.auto-stage-status {
  color: var(--ink-400);
}

.meta-secondary {
  margin-top: 6rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx 14rpx;
  color: var(--ink-400);
  font-size: 22rpx;
}


.header-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.header-actions .btn {
  padding: 10rpx 20rpx;
  font-size: 22rpx;
}

.lobby-reorder-item {
  width: 100%;
  height: 88px;
  box-sizing: border-box;
  padding: 0 6rpx;
}

.lobby-reorder-item .player-card {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.player-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
  min-width: 0;
}

.drag-handle {
  display: grid;
  grid-template-columns: repeat(2, 6rpx);
  grid-template-rows: repeat(3, 6rpx);
  gap: 4rpx;
  width: 64rpx;
  height: 64rpx;
  padding: 0;
  justify-content: center;
  align-content: center;
  justify-items: center;
  align-items: center;
  opacity: 0.7;
  z-index: 3;
  border-radius: 12rpx;
  background: rgba(227, 197, 116, 0.06);
  border: 1px solid rgba(227, 197, 116, 0.12);
  flex: 0 0 auto;
}

.drag-handle .dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: rgba(227, 197, 116, 0.8);
}

